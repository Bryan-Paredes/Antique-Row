---
import { navItems } from "../components/Navbar/nav-items";
---

<footer class="container min-w-fit mx-auto">
  <section
    class="grid grid-cols-3 items-center justify-center m-6 gap-4 py-10 sm:py-14"
  >
    <div class="flex items-center justify-center">
      <img src="/logo.webp" alt="logo" class="w-60 h-24" />
    </div>
    <div class="flex flex-col gap-2 text-center text-lg font-medium">
      <p>2700-3900 South Dixie Hwy, West Palm Beach Florida, 33405</p>
      <p>info@antiquerowwpb.com</p>
    </div>
    <div
      class="flex items-center justify-center gap-3 text-center transition-all duration-300 ease"
    >
      {
        navItems.map(({ id, name, href }) => (
          <a
            href={href}
            class="text-lg font-bold text-old-rose-600 hover:text-old-rose-950"
          >
            {name}
          </a>
        ))
      }
    </div>
  </section>
</footer>
